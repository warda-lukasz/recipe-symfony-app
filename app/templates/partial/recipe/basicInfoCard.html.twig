<div class="card mb-4 text-center shadow">
    <div class="card-header bg-dark text-white">
        <h2 class="mb-0">ğŸ² {{ recipe.title }} ğŸ²</h2>
    </div>
    <img src="{{ asset(recipe.mealThumb) }}" alt="{{ recipe.title }}"
    class="img w-50 mx-auto rounded my-3 shadow">
    <div class="card-body">
        <p>
            <strong>Category:</strong> <a href="{{ path('category_show', {
            id: recipe.category.id }) }}">{{ recipe.category.name ?? 'N/A' }}</a>
            <br>
            <strong>Area:</strong> {{ recipe.area ?? 'N/A' }}<br>
            <a href="{{ path('recipe_all_comments', { id: recipe.id }) }}">{{ recipe.comments|length }} Comments</a>
            <br>
            <small class="fw-lighter my-2">
                {% if recipe.tags %}
                    Tags: {{ recipe.tags }}
                {% endif %}
            </small>
            <hr>
            <a class="fw-light" href="{{ recipe.source }}">Source</a>
            <a class="fw-light" href="{{ recipe.youtube }}">YouTube</a>
        </p>
    </div>
</div>
