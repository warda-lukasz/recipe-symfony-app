<div style="margin-right: 1em;" class="card shadow rounded-top">
    <div class="card-header bg-dark text-white rounded-top">
        <h2 class="mb-0">
            Ingredients <i class="fa-solid fa-carrot"></i>
        </h2>
    </div>
    <div class="card-body">
        <ul class="list-group">
            {% if recipe.measurements is defined and recipe.measurements|length > 0 %}
                {% for measurement in recipe.measurements %}
                    <li class="list-group-item">
                        <strong>
                        <span class="badge bg-dark text-light">
                        Ingredient:
                        </span>
                            <a class="text-dark" href="{{ path('ingredient_show', { id: measurement.ingredient.id }) }}">
                                {{ measurement.ingredient.name }}:
                            </a>
                        </strong>
                        {{ measurement.measure }}
                    </li>
                {% endfor %}
            {% else %}
                <li class="list-group-item">Brak danych o sk≈Çadnikach</li>
            {% endif %}
        </ul>
    </div>
</div>

